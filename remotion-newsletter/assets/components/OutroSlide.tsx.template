/**
 * OutroSlide Component Template
 *
 * Closing slide with sources list and thank you message.
 * Duration: 90 frames (3 seconds at 30fps)
 */

import React, { useState } from "react";
import {
  AbsoluteFill,
  interpolate,
  spring,
  useCurrentFrame,
  useVideoConfig,
  random,
} from "remotion";

const FONT_FAMILY = "SF Pro Text, Helvetica, Arial, sans-serif";

interface Source {
  name: string;
  url: string;
}

interface OutroSlideProps {
  sources: Source[];
  outroText?: string;
  ctaText?: string;
  primaryColor: string;
  secondaryColor: string;
  backgroundColor?: string;
  textColor?: string;
}

export const OutroSlide: React.FC<OutroSlideProps> = ({
  sources,
  outroText = "Thanks for watching",
  ctaText,
  primaryColor,
  secondaryColor,
  backgroundColor = "#1E293B",
  textColor = "#F8FAFC",
}) => {
  const frame = useCurrentFrame();
  const { fps, width, height } = useVideoConfig();
  const [gradientId] = useState(() => String(random(null)));

  // Main text animation
  const textProgress = spring({
    frame,
    fps,
    config: { damping: 100 },
  });
  const textScale = interpolate(textProgress, [0, 1], [0.9, 1]);
  const textOpacity = interpolate(textProgress, [0, 1], [0, 1]);

  // Sources fade in
  const sourcesOpacity = interpolate(frame, [30, 50], [0, 1], {
    extrapolateLeft: "clamp",
    extrapolateRight: "clamp",
  });

  // CTA animation
  const ctaProgress = spring({
    frame: frame - 40,
    fps,
    config: { damping: 100 },
  });
  const ctaScale = interpolate(ctaProgress, [0, 1], [0.8, 1]);
  const ctaOpacity = interpolate(ctaProgress, [0, 1], [0, 1]);

  // Background gradient animation
  const gradientRotation = interpolate(frame, [0, 90], [0, 30]);

  return (
    <AbsoluteFill style={{ backgroundColor }}>
      {/* Animated background gradient */}
      <AbsoluteFill style={{ opacity: 0.2 }}>
        <svg
          viewBox={`0 0 ${width} ${height}`}
          style={{
            width: "100%",
            height: "100%",
            transform: `rotate(${gradientRotation}deg) scale(1.5)`,
          }}
        >
          <defs>
            <radialGradient id={gradientId} cx="50%" cy="50%" r="50%">
              <stop offset="0%" stopColor={primaryColor} />
              <stop offset="100%" stopColor="transparent" />
            </radialGradient>
          </defs>
          <rect fill={`url(#${gradientId})`} width={width * 2} height={height * 2} x={-width / 2} y={-height / 2} />
        </svg>
      </AbsoluteFill>

      {/* Content */}
      <AbsoluteFill
        style={{
          justifyContent: "center",
          alignItems: "center",
          padding: 100,
        }}
      >
        {/* Main outro text */}
        <h1
          style={{
            fontFamily: FONT_FAMILY,
            fontSize: 72,
            fontWeight: "bold",
            color: textColor,
            margin: 0,
            marginBottom: 40,
            transform: `scale(${textScale})`,
            opacity: textOpacity,
            textAlign: "center",
          }}
        >
          {outroText}
        </h1>

        {/* Decorative line */}
        <div
          style={{
            width: interpolate(textProgress, [0, 1], [0, 300]),
            height: 4,
            background: `linear-gradient(90deg, ${primaryColor}, ${secondaryColor})`,
            borderRadius: 2,
            marginBottom: 50,
          }}
        />

        {/* Sources section */}
        {sources.length > 0 && (
          <div
            style={{
              opacity: sourcesOpacity,
              textAlign: "center",
              maxWidth: 800,
            }}
          >
            <p
              style={{
                fontFamily: FONT_FAMILY,
                fontSize: 20,
                color: primaryColor,
                margin: 0,
                marginBottom: 20,
                letterSpacing: 2,
                textTransform: "uppercase",
              }}
            >
              Sources
            </p>
            <div
              style={{
                display: "flex",
                flexWrap: "wrap",
                justifyContent: "center",
                gap: 15,
              }}
            >
              {sources.slice(0, 6).map((source, i) => (
                <div
                  key={i}
                  style={{
                    backgroundColor: "rgba(255,255,255,0.05)",
                    padding: "8px 16px",
                    borderRadius: 20,
                    border: `1px solid rgba(255,255,255,0.1)`,
                  }}
                >
                  <span
                    style={{
                      fontFamily: FONT_FAMILY,
                      fontSize: 16,
                      color: textColor,
                      opacity: 0.7,
                    }}
                  >
                    {source.name}
                  </span>
                </div>
              ))}
            </div>
          </div>
        )}

        {/* CTA button */}
        {ctaText && (
          <div
            style={{
              marginTop: 50,
              transform: `scale(${ctaScale})`,
              opacity: ctaOpacity,
            }}
          >
            <div
              style={{
                background: `linear-gradient(135deg, ${primaryColor}, ${secondaryColor})`,
                padding: "16px 40px",
                borderRadius: 30,
              }}
            >
              <span
                style={{
                  fontFamily: FONT_FAMILY,
                  fontSize: 24,
                  fontWeight: "bold",
                  color: "#FFFFFF",
                }}
              >
                {ctaText}
              </span>
            </div>
          </div>
        )}
      </AbsoluteFill>

      {/* Bottom decoration */}
      <div
        style={{
          position: "absolute",
          bottom: 0,
          left: 0,
          right: 0,
          height: 8,
          background: `linear-gradient(90deg, ${primaryColor}, ${secondaryColor})`,
          opacity: textOpacity,
        }}
      />
    </AbsoluteFill>
  );
};

export default OutroSlide;
