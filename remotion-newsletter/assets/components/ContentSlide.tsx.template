/**
 * ContentSlide Component Template
 *
 * Content section with animated headline and staggered bullet points.
 * Duration: 150-180 frames (5-6 seconds at 30fps)
 *
 * Supports two styles:
 * - news-summary: Text-focused with gradient accent
 * - visual-presentation: Image background with overlay
 */

import React, { useState } from "react";
import {
  AbsoluteFill,
  Img,
  interpolate,
  spring,
  useCurrentFrame,
  useVideoConfig,
  random,
} from "remotion";

const FONT_FAMILY = "SF Pro Text, Helvetica, Arial, sans-serif";

interface Section {
  headline: string;
  keyPoints: string[];
  imageUrl?: string;
}

interface ContentSlideProps {
  section: Section;
  index: number;
  total: number;
  primaryColor: string;
  secondaryColor: string;
  backgroundColor?: string;
  textColor?: string;
  style?: "news-summary" | "visual-presentation";
}

export const ContentSlide: React.FC<ContentSlideProps> = ({
  section,
  index,
  total,
  primaryColor,
  secondaryColor,
  backgroundColor = "#1E293B",
  textColor = "#F8FAFC",
  style = "news-summary",
}) => {
  const frame = useCurrentFrame();
  const { fps, width, height } = useVideoConfig();
  const [gradientId] = useState(() => String(random(null)));

  // Headline animation
  const headlineProgress = spring({
    frame,
    fps,
    config: { damping: 100 },
  });
  const headlineScale = interpolate(headlineProgress, [0, 1], [0.9, 1]);
  const headlineOpacity = interpolate(headlineProgress, [0, 1], [0, 1]);
  const headlineY = interpolate(headlineProgress, [0, 1], [30, 0]);

  // Progress indicator
  const progressWidth = ((index + 1) / total) * 100;

  if (style === "visual-presentation" && section.imageUrl) {
    return (
      <AbsoluteFill>
        {/* Background image */}
        <Img
          src={section.imageUrl}
          style={{
            width: "100%",
            height: "100%",
            objectFit: "cover",
          }}
        />

        {/* Dark overlay */}
        <AbsoluteFill
          style={{
            background: "linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.3) 50%, rgba(0,0,0,0.5) 100%)",
          }}
        />

        {/* Content */}
        <AbsoluteFill
          style={{
            justifyContent: "flex-end",
            padding: 80,
          }}
        >
          {/* Headline */}
          <h2
            style={{
              fontFamily: FONT_FAMILY,
              fontSize: 72,
              fontWeight: "bold",
              color: textColor,
              margin: 0,
              marginBottom: 30,
              transform: `translateY(${headlineY}px) scale(${headlineScale})`,
              opacity: headlineOpacity,
              textShadow: "0 4px 20px rgba(0,0,0,0.8)",
              lineHeight: 1.2,
            }}
          >
            {section.headline}
          </h2>

          {/* Key points */}
          <div style={{ marginBottom: 60 }}>
            {section.keyPoints.map((point, i) => {
              const delay = 20 + i * 15;
              const pointProgress = spring({
                frame: frame - delay,
                fps,
                config: { damping: 100 },
              });
              const pointOpacity = interpolate(pointProgress, [0, 1], [0, 1]);
              const pointX = interpolate(pointProgress, [0, 1], [-30, 0]);

              return (
                <div
                  key={i}
                  style={{
                    display: "flex",
                    alignItems: "flex-start",
                    marginBottom: 15,
                    opacity: pointOpacity,
                    transform: `translateX(${pointX}px)`,
                  }}
                >
                  <div
                    style={{
                      width: 8,
                      height: 8,
                      borderRadius: 4,
                      backgroundColor: primaryColor,
                      marginTop: 12,
                      marginRight: 20,
                      flexShrink: 0,
                    }}
                  />
                  <p
                    style={{
                      fontFamily: FONT_FAMILY,
                      fontSize: 32,
                      color: textColor,
                      margin: 0,
                      textShadow: "0 2px 10px rgba(0,0,0,0.5)",
                      lineHeight: 1.4,
                    }}
                  >
                    {point}
                  </p>
                </div>
              );
            })}
          </div>

          {/* Progress bar */}
          <div
            style={{
              position: "absolute",
              bottom: 40,
              left: 80,
              right: 80,
              height: 4,
              backgroundColor: "rgba(255,255,255,0.2)",
              borderRadius: 2,
            }}
          >
            <div
              style={{
                width: `${progressWidth}%`,
                height: "100%",
                background: `linear-gradient(90deg, ${primaryColor}, ${secondaryColor})`,
                borderRadius: 2,
              }}
            />
          </div>
        </AbsoluteFill>
      </AbsoluteFill>
    );
  }

  // News Summary style (text-focused)
  return (
    <AbsoluteFill style={{ backgroundColor }}>
      {/* Accent gradient */}
      <div
        style={{
          position: "absolute",
          left: 0,
          top: 0,
          bottom: 0,
          width: 8,
        }}
      >
        <svg viewBox={`0 0 8 ${height}`} style={{ width: 8, height: "100%" }}>
          <defs>
            <linearGradient id={gradientId} x1="0%" y1="0%" x2="0%" y2="100%">
              <stop offset="0%" stopColor={primaryColor} />
              <stop offset="100%" stopColor={secondaryColor} />
            </linearGradient>
          </defs>
          <rect fill={`url(#${gradientId})`} width={8} height={height} />
        </svg>
      </div>

      {/* Content */}
      <AbsoluteFill
        style={{
          padding: "100px 120px 100px 150px",
          justifyContent: "center",
        }}
      >
        {/* Section number */}
        <p
          style={{
            fontFamily: FONT_FAMILY,
            fontSize: 20,
            color: primaryColor,
            margin: 0,
            marginBottom: 20,
            opacity: headlineOpacity,
            letterSpacing: 2,
            textTransform: "uppercase",
          }}
        >
          Section {index + 1} of {total}
        </p>

        {/* Headline */}
        <h2
          style={{
            fontFamily: FONT_FAMILY,
            fontSize: 64,
            fontWeight: "bold",
            color: textColor,
            margin: 0,
            marginBottom: 50,
            transform: `translateY(${headlineY}px) scale(${headlineScale})`,
            opacity: headlineOpacity,
            lineHeight: 1.2,
          }}
        >
          {section.headline}
        </h2>

        {/* Key points with staggered animation */}
        <div>
          {section.keyPoints.map((point, i) => {
            const delay = 20 + i * 15;
            const pointProgress = spring({
              frame: frame - delay,
              fps,
              config: { damping: 100 },
            });
            const pointOpacity = interpolate(pointProgress, [0, 1], [0, 1]);
            const pointX = interpolate(pointProgress, [0, 1], [-30, 0]);

            return (
              <div
                key={i}
                style={{
                  display: "flex",
                  alignItems: "flex-start",
                  marginBottom: 25,
                  opacity: pointOpacity,
                  transform: `translateX(${pointX}px)`,
                }}
              >
                <div
                  style={{
                    width: 12,
                    height: 12,
                    borderRadius: 6,
                    background: `linear-gradient(135deg, ${primaryColor}, ${secondaryColor})`,
                    marginTop: 14,
                    marginRight: 25,
                    flexShrink: 0,
                  }}
                />
                <p
                  style={{
                    fontFamily: FONT_FAMILY,
                    fontSize: 36,
                    color: textColor,
                    margin: 0,
                    lineHeight: 1.5,
                    opacity: 0.9,
                  }}
                >
                  {point}
                </p>
              </div>
            );
          })}
        </div>
      </AbsoluteFill>

      {/* Progress bar */}
      <div
        style={{
          position: "absolute",
          bottom: 50,
          left: 150,
          right: 120,
          height: 4,
          backgroundColor: "rgba(255,255,255,0.1)",
          borderRadius: 2,
        }}
      >
        <div
          style={{
            width: `${progressWidth}%`,
            height: "100%",
            background: `linear-gradient(90deg, ${primaryColor}, ${secondaryColor})`,
            borderRadius: 2,
          }}
        />
      </div>
    </AbsoluteFill>
  );
};

export default ContentSlide;
